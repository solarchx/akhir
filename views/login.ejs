<div class="flex h-full items-center justify-center bg-black/25">
    <div class="flex w-full h-3/6 justify-center items-center">
        <div class="flex w-2/5 h-3/6 items-center justify-center border border-neutral-600 bg-gradient-to-r from-rose-600/25 to-orange-700/25 rounded-xl backdrop-blur-sm fixed">
            <div class="m-3">
                <div class=" flex justify-center">
                    <img src="img/logo-rplbaru.png" alt="Logo" class="rounded-full h-40 w-42">
                </div>
            </div>
            <div class="ml-4 mr-0">
                <div class=" flex items-center w-80 justify-center">
                    <form id="loginForm" action="/login" method="POST">
                        <div class="mb-3">
                            <label class="large font-bold text-white mb-1" for="username">username</label><br>
                            <input class="py-4 px-2 w-60 h-5 bg-gradient-to-tl from-rose-600/75 to-amber-700 border rounded-xl" id="username" name="username" type="text"
                                placeholder="Masukkan Username" />
                        </div>
                        <div class="mb-3">
                            <label class="large font-bold text-white mb-1 " for="password">Password</label><br>
                            <input class="py-4 px-2 w-60 h-5 bg-gradient-to-tl from-rose-600/75 to-amber-700 border rounded-xl" id="password" name="password" type="password"
                                placeholder="Masukkan Password" />
                        </div>
                        <div class="flex items-center justify-between mt-4 mb-0">
                            <button type="submit"
                                class="bg-gradient-to-r from-orange-700 to-orange-500 hover:bg-gradient-to-tr hover:from-rose-500 hover:to-orange-700 text-white font-bold py-2 px-4 rounded-xl">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>